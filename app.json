{
    "name": "MEKAsystems",
    "description": "Bot created by Lemon with custom gaming and programming addons.",
    "keywords": [
        "discord",
        "bot",
        "gaming",
        "programming"
    ],
    "buildpacks": [
        {
            "url": "https://github.com/heroku/heroku-buildpack-python"
        },
        {
            "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest"
        },
        {
            "url": "https://github.com/justalemon/heroku-buildpack-opus"
        }
    ],
    "repository": "https://github.com/justalemon/MEKAsystems",
    "env": {
        "DISCORD_TOKEN": {
            "description": "Discord token for the Bot.",
            "required": true
        },
        "DISCORD_PREFIX": {
            "description": "Prefix used for the commands.",
            "required": false
        },
        "MONGODB_URL": {
            "description": "URL to connect MongoDB. The formats supported are mongodb:// y mongodb+srv://.",
            "required": false
        }
    }
}
